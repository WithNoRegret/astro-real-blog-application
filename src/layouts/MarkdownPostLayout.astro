---
import BaseLayout from "./BaseLayout.astro";

interface Frontmatter {
  title: string;
  pubDate: Date;
  description: string;
  author: string;
  image: {
    url: string;
    alt: string;
  };
}

const { frontmatter } = Astro.props as { frontmatter: Frontmatter };
const { title, pubDate, description, author, image } = frontmatter;
---

<BaseLayout pageTitle={title}>
  <p>{pubDate.toString().slice(0, 10)}</p>
  <p><em>{description}</em></p>
  <p>Written by: {author}</p>
  <img src={image.url} width="300" alt={image.alt} />
  <slot />
</BaseLayout>
